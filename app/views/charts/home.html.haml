= javascript_include_tag 'home'
= javascript_include_tag 'salaries'
%h1 Home

#row
  .col-md-6.text-center
    %h2= link_to 'Salaries', salaries_path
    #salaries_chart.small-chart.center{data: {employees: @employees.to_json(methods: [:display_pay]), data_table: @salary_data_table.to_json, chart_params: {width: 300, height: 200, legend: "none", vAxis: {textPosition: "none"}, hAxis: {textPosition: "none"}, chartArea: {width: "100%", height: "100%"}}.to_json}}
  .col-md-6.text-center
    %h2= link_to 'Experience', experience_path
    = react_component("ExperienceGraph", { data: @employees.to_json(methods: [:weighted_years_experience, :current_or_last_pay]) })
